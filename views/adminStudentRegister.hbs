<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <title>Admin - Login</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">JLT</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Admin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/adminList">Admin List</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container py-5 my-5">
        <h4 class="text-center">Student Registry</h4>
      {{#if message}}
      <h4 class="alert alert-danger mt-4 text-center">{{message}}</h4>
      {{/if}}
      <form action="/auth/adminStudentRegister" method="POST">
        <div class="container">
          {{!-- <div class="row mb-3">
            <div class="col-1">
              <label for="student_id" class="form-label">ID:</label>
              <input type="number" class="form-control" name="student_id" id="student_id" readonly>
            </div>
          </div> --}}
          <div class="row mb-3 justify-content-center">
            <div class="col">
              <label for="student_fname" class="form-label">First Name:</label>
              <input type="text" class="form-control" name="student_fname" id="student_fname">
            </div>
            <div class="col">
              <label for="student_mname" class="form-label">Middle Name:</label>
              <input type="text" class="form-control" name="student_mname" id="student_mname">
            </div>
            <div class="col">
              <label for="student_lname" class="form-label">Last Name:</label>
              <input type="text" class="form-control" name="student_lname" id="student_lname">
            </div>
          </div>
          <div class="row mb-3 justify-content-center">
            <div class="col">
              <label for="student_contact" class="form-label">Contact #:</label>
              <input type="text" class="form-control" name="student_contact" id="student_contact">
            </div>
            <div class="col">
              <label for="student_email" class="form-label">Email:</label>
              <input type="email" class="form-control" name="student_email" id="student_email">
            </div>
          </div>
          <div class="row mb-3 justify-content-center">
            <div class="col-6 text-center">
              <button type="submit" class="btn btn-primary text-center">
                Submit
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="text-center bg-primary fixed-bottom">
      <small>Copyright 2021 by JLT.</small>
    </div>
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
